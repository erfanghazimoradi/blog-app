<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="/icons/css/all.min.css">
    <link rel="stylesheet" href="/icons/css/brands.min.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/navigation.css">
    <link rel="stylesheet" href="/stylesheets/authentication/signup-page.css">
    
    <title>Signup Page</title>
</head>
<body>
    <div class="container">
        <%- include('../partial/auth-navigation.ejs') %> 

    <!-- Signup Form -->
    <form action="/authentication/signup" method="POST" id="signupForm">
        <h3>Sign Up Form</h3>

        <div class="split">
            <input type="text" name="firstname" placeholder="Firstname" value="Iman">
            <input type="text" name="lastname" placeholder="Lastname" value="Moradi" class="right">
        </div>
        <input type="text" name="username" placeholder="Username" id="username" value="iman">
        <input type="text" name="password" placeholder="Password" value="iman2525">

        <div class="split">
            <select name="gender">
                <option value="" selected disabled hidden>Gender</option> 
                <option value="female">Female</option>
                <option value="male" selected>Male</option>
                <option value="unset">Rather not say</option>
            </select>
            <input type="text" name="phoneNumber" placeholder="Phone Number" value="09122211557" class="right">
        </div>
        

        <button type="submit">Sign Up</button>
    </form>

    <% if (signupResult) { %>
        <ul>
            <% signupResult.forEach(err => { %>
                <li> <%= err %> </li>
            <% }) %>
        </ul>
    <% } %>
    </div>
    
    
    <!-- scripts -->
    <script src="/javascripts/jquery-3.5.1.min.js"></script>
    <script src="/javascripts/test.js"></script>
</body>
</html>