<form action="/" id="updateArticle" spellcheck="false" autocomplete="off">
    <div class="column">
        <label for="title">Article Title</label>
    </div>
    <div class="column">
        <input type="text" id="title" name="title" value="<%= article.title %>">
    </div>
    <div class="column">
        <p class="update-error title-error">title required.</p>
    </div>

    <label for="description">Description</label>
    <input type="text" id="description" name="description" value="<%= article.description %>">
    <p class="update-error description-error">description required.</p>

    <label for="content">Content</label>
    <textarea name="content" id="content" rows="12"><%= article.content %></textarea>
    <p class="update-error content-error">content required.</p>

    <button type="submit">Update Article</button>
</form>